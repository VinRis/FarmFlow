{
    "name": "FarmFlow - Farm Management",
    "short_name": "FarmFlow",
    "description": "Offline-first farm management PWA for African farmers. Track finances, manage enterprises, and grow your farm business.",
    "start_url": "/FarmFlow/",
    "scope": "/FarmFlow/",
    "display": "standalone",
    "display_override": ["window-controls-overlay"],
    "orientation": "portrait-primary",
    "theme_color": "#2E7D32",
    "background_color": "#E8F5E9",
    "categories": ["finance", "business", "productivity", "agriculture"],
    "dir": "ltr",
    "lang": "en",
    "icons": [
        {
            "src": "icons/icon-72x72.png",
            "sizes": "72x72",
            "type": "image/png",
            "purpose": "any maskable"
        },
